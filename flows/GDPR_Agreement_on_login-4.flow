        <locationX>527</locationX>
        <locationY>46</locationY>
        <defaultConnector>
            <targetReference>Increment_user_login_count</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>[Default Outcome]</defaultConnectorLabel>
        <rules>
            <name>continue</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>currentUser.GDPR_Terms_Agreed__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>GDPR_Terms</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
