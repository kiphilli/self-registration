        <label>Set GDPR terms agreement timestamp</label>
        <locationX>184</locationX>
        <locationY>442</locationY>
        <assignmentItems>
            <assignToReference>currentUser.GDPR_Terms_Agreed_Timestamp__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>$Flow.CurrentDateTime</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>currentUser.GDPR_Terms_Agreed__c</assignToReference>
