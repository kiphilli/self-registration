        <connector>
            <targetReference>Does_user_need_to_agree_to_GDPR_terms</targetReference>
        </connector>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>userId</elementReference>
            </value>
        </filters>
        <object>User</object>
        <outputReference>currentUser</outputReference>
        <queriedFields>GDPR_Terms_Agreed__c</queriedFields>
    </recordLookups>
