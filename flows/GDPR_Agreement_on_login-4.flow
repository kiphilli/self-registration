    <screens>
        <description>GDPR Terms acceptance checkbox</description>
        <name>GDPR_Terms</name>
        <label>GDPR Terms</label>
        <locationX>585</locationX>
        <locationY>420</locationY>
        <allowBack>false</allowBack>
        <allowFinish>true</allowFinish>
        <allowPause>false</allowPause>
        <connector>
            <targetReference>Set_GDPR_terms_agreement_timestamp</targetReference>
        </connector>
        <fields>
            <name>terms</name>
            <fieldText>Please review our updated Terms of Use and Privacy and Information Security Policy. By accessing or contributing to the platform, you are agreeing with the Community Terms of Use and Privacy and Information Security Policy without modification by you (&quot;Platform Terms&quot;). If you do not agree, please do not access or use the platform.</fieldText>
            <fieldType>DisplayText</fieldType>
        </fields>
        <fields>
            <name>termsCheckbox</name>
            <dataType>Boolean</dataType>
            <fieldText>I agree</fieldText>
            <fieldType>InputField</fieldType>
            <isRequired>true</isRequired>
            <validationRule>
                <errorMessage>You must accept the terms to continue.</errorMessage>
                <formulaExpression>{!termsCheckbox} = TRUE</formulaExpression>
            </validationRule>
        </fields>
        <showFooter>true</showFooter>
        <showHeader>false</showHeader>
    </screens>
